{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ post.text }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                <img src="{{ asset('uploads/post/images/' ~ post.image) }}" alt="">
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('post') }}" data-test="back-list" class="btn btn-info">Back to list</a>

    <a href="{{ path('post_show_comments', {'id': post.id}) }}" class="btn btn-info">Show Comments</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}" data-test="edit" class="btn btn-success">Edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
